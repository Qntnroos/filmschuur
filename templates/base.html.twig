<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>

            <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css">
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
            <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/mdb.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/main.css') }}">
        {% block stylesheets %}
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    <!--Navbar -->
    {% block navbar %}

    <nav class="navbar navbar-expand-lg navbar-dark fixed-top py-2">
        <a class="navbar-brand" href="/"><img src="{{ asset('img/logo.png') }}" alt=""></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent-333"
                aria-controls="navbarSupportedContent-333" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent-333">
            <div class="navbar-nav ml-auto d-flex flex-column text-center align-content-center">
                {% block midcontent %}
                <div><h3>De Filmschuur</h3></div>
                <div><p>"In De FilmSchuur kan je niet alleen films bekijken maar ze ook beleven."</p></div>
                {% endblock %}
            </div>
            <ul class="navbar-nav ml-auto nav-flex-icons">

                <li class="nav-item">
                    <a class="nav-link" href="/programma">PROGRAMMA</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/information">INFORMATIE</a>
                </li>
                {% if is_granted('ROLE_USER') %}
                <li class="nav-item">
                    <a  href="/logout" class="nav-link waves-effect waves-light" data-toggle="tooltip"
                        data-placement="bottom" title="afmelden">
                        <i class="fas fa-sign-out-alt"></i>
                    </a>
                </li>
                  <li class="nav-item">
                    <a  href="/edit" class="nav-link waves-effect waves-light" data-toggle="tooltip"
                        data-placement="bottom" title="wijzig jouw gegevens">
                        <i class="fas fa-user-edit"></i>
                    </a>
                </li>
                {% else %}
                <li class="nav-item">
                    <a  href="/login" class="nav-link waves-effect waves-light" data-toggle="tooltip"
                        data-placement="bottom" title="inloggen">
                        <i class="fas fa-user" ></i>
                    </a>
                </li>
                {% endif %}
                <li class="nav-item">
                    <a class="nav-link waves-effect waves-light">
                        <i class="fas fa-search"></i>
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    {% endblock %}
    <!--/.Navbar -->
    {% block flash %}
        {% for message in app.flashes('success') %}
            <div class="text-center text-uppercase w-75 bg-light mx auto my-2 p-2">
                {{ message }}
            </div>
        {% endfor %}
    {% endblock flash %} Volgende code $this->addFlash('success', 'Je bent succesvol geregistreerd'); 
    {% block body %}
    {% endblock %}

            <!-- SCRIPTS -->
            <!-- JQuery -->
            <script type="text/javascript" src="{{ asset('js/jquery-3.3.1.min.js') }}"></script>
            <!-- Bootstrap tooltips -->
            <script type="text/javascript" src="{{ asset('js/popper.min.js') }}"></script>
            <!-- Bootstrap core JavaScript -->
            <script type="text/javascript" src="{{ asset('js/bootstrap.min.js') }}"></script>
            <!-- MDB core JavaScript -->
            <script type="text/javascript" src="{{ asset('js/mdb.js') }}"></script>
        {% block scripts %}
        <script>
            // Tooltips Initialization
            <script type="text/javascript" src="{{ asset('js/tooltip.js') }}"></script>
        </script>
        {% endblock %}
    </body>
</html>
