{% extends 'base.html.twig' %}
{% block title %}De filmschuur{% endblock %}
    {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/login/login.css') }}">
    {% endblock %}
{% block navbar %}
 <nav class="mb-1 navbar">
    <a class="navbar-brand" href="/"><img src="{{ asset('img/logo.png') }}" alt=""></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent-333"
            aria-controls="navbarSupportedContent-333" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  </nav>
{% endblock %}
{% block body %}
<body class="orangebody">
<main class="container-fluid">
    <form id="app"  method="POST" action="" class="text-center border border-light p-4 p-ms-5 max-vw-75" novalidate>

        <div class="mb-4">
            <img src ="{{ asset('img/lock.svg') }}" alt ="slot"/>
        </div>

        <div class ="col-12 mt-2">
            <h4 class=" text-center mb-4 ">REGISTRATIE</h4>
        </div>

        <div class ="row mb-2">
            <!-- First name -->
            <div class ="col-12 mb-2 col-sm-6 mb-sm-0 text-left">
            <label for="registerFormFirstName">Voornaam:</label>
            <label class ="errorfirstname"></label>
            <input id="firstname" type="text" name="registerFormFirstName" value="" class="form-control" placeholder="voornaam">
            </div>

        <!-- Last name -->
            <div class ="col-12 col-sm-6 text-left">
            <label for="registerFormLasttName">Naam:</label>
            <label class ="errorlastname"> </label>
            <input id="lastname" type="text" name="registerFormLastName"  value ="" class="form-control" placeholder="naam">
            </div>
        </div>

        <div class ="row">      
            <!-- E-mail -->
            <div class ="col-12 mb-2 col-sm-6 mb-sm-0 text-left">
                <label for="registerFormEmail">E-mail:</label>
                <label class="errorEmail"></label>
                <input id="registerFormEmail" type="email" name="registerFormEmail" value="" class="form-control mb-0" placeholder="voorbeeld@email.be" autocomplete="off">
            </div>

            <!-- Repeat E-mail -->
            <div class ="col-12 col-sm-6 text-left">   
                <label for="registerFormEmailRepeat">Herhaal e-mail:</label>
                <label class ="errorEmail2"></label>
                <input id="registerFormEmail2" type="email" name="registerFormEmailRepeat" class="form-control" placeholder="voorbeeld@email.be">
            </div>

            <!-- Comment text -->
            <div class ="col-12 mb-1 text-left ">
                <label class="text-muted mb-1 mb-sm-0">We zullen je e-mail <u> nooit</u> met iemand delen.</label>
                <label class="errorCompare mb-1 mb-sm-0"></label>
            </div>
        </div>

        <div class ="row">
            <div class ="col-12 col-sm-6 text-left">
                <!-- Password -->
                {# <div class="form-group"> #}
                    <label for= "RegisterFormPassword1 ">Paswoord</label>
                    <label class ="errorPassword"> </label>
                    <div class="input-group" id="show_hide_password">
                        <input id="registerPassword" class="form-control mb-0 " name="RegisterFormPassword1" value="" type="password" placeholder ="paswoord">
                        <div class="input-group-addon">
                            <a href=""><i class="fa fa-eye-slash" aria-hidden="true"></i></a>
                        </div>
                    </div>
                {# </div> #}
            </div>

            <div class ="col-12 col-sm-6 text-left">
                <!-- Repeat Password -->
                <label for = "RegisterFormPassword2">Herhaal paswoord</label>
                <label class ="errorPassword2"></label>
                <div class="input-group" id="show_hide_password">
                    <input id="registerPassword2" class="form-control mb-0" name="RegisterFormPassword2" value="" type="password" placeholder ="paswoord">
                    <div class="input-group-addon">
                        <a href=""><i class="fa fa-eye-slash" aria-hidden="true"></i></a>
                    </div>
                </div>
            </div>

            <div class ="col-12 mb-1 text-left">
                <!-- Aanwijzingstekst -->
                    <label class="text-muted mb-1 mb-sm-0">
                        Tenminste 8 karakters waarvan minimum 1 hoofdletter, 1 kleine letter, 1 cijfer, geen opeenvolgende spaties.
                    </label>
                    <label class="errorPasswordCompare"></label>
            </div>
        </div>

        <div class ="row mb-2">
            <div class ="col-12 text-left">
                <!-- Adress -->
                <label for="RegisterFormAdress">Adres:</label>
                <label class ="erroradress"></label>
                <input id="adress" type="text" name="RegisterFormAdress" class="form-control" value="" placeholder="straat & nr"><!--required pattern="/^([1-9][e][\s])*([a-zA-Z]+(([\.][\s])|([\s]))?)+[1-9][0-9]*(([-][1-9][0-9]*)|([\s]?[a-zA-Z]+))?$/i"-->
            </div>
        </div>

        <div class ="row mb-2">
            <div class ="col-12 mb-2 col-sm-6 mb-sm-0 text-left">
                <!-- Postalnumber -->
                <label for="RegisterFormPostalNumber">Postcode:</label>
                <label class ="errorpostalnumber"></label>
                <input id="postalnumber" type="text" name="RegisterFormPostalNumber" class="form-control" value="" placeholder="postnummer" minlength="4" maxlength="4">
            </div>

            <div class ="col-12 col-sm-6 text-left">
                <!-- City -->
                <label for="RegisterFormCity">Gemeente:</label>
                <input type="text" name="RegisterFormCity" class="form-control" placeholder="gemeente">
            </div>
        </div>

        <div class ="row">
            <div class ="col-12 col-sm-6 text-left">
                <!-- Phone number -->
                <label for="RegisterPhone"> GSM/Telefoon:</label>
                <label class ="errorphone"></label>
                <input id="phone" type="tel" name="RegisterPhone" value="" class="form-control" placeholder="0999 99 99 99 (respecteer spaties)">
            </div>

                <!-- Gender -->
            <div class ="col-12 col-sm-6 text-left">
                <label for="RegisterFormGender">Geslacht:</label>
                <select name="RegisterFormGender" class="md-form mdb-select caret">
                    <option value="" disabled>Kies je geslacht:</option>
                    <option value="M">M</option>
                    <option value="V">V</option>
                    <option value="X">X</option>
                </select>
            </div>
        </div>

        <div class ="row mt-n3 mb-3">
            <div class ="col-12 col-sm-6 text-left mb-0">
                <!-- Birthdate -->
                <label for="date-picker">Geboortedatum</label>
                <label class ="error"></label>
                <input placeholder="selecteer datum" type="text" name="date-picker" data-value="1970/01/01" class="form-control datepicker mb-0" required>
            </div>

            <div class ="col-12 col-sm-6 text-right mb-2 mb-sm-0 ">
                <!-- Sign up button -->
                <button id ="regbutton" class ="btn" type="submit">REGISTREREN</button>
            </div>
        </div>
    </form>
</main>

<footer>
    <div class="d-flex flex-row-reverse">
        <div class="triangle"></div>
        <div class= "d-flex" id = "triangle-bottomright">
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <!-- Terms of service -->
            <div class="right-corner col-12 text-right mb-2 mr-2">
                <div class ="col-6 text-right mb-0">
                </div>
                <!-- Sign up button -->
                    <a href="/login"><button class="btn2" type="submit">REEDS EEN ACCOUNT? LOGIN</button></a>
                    <br>
                    <a href="" >Algemene Voorwaarden -</a>
                    <a href="" >Privacybeleid -</a>
                    <a href="" >Cookiebeleid</a>
            </div>
        </div>
    </div>
</footer>
{% block scripts %}
    <script type="text/javascript" src="{{ asset('js/passwordviewer.js') }}"></script>      
    <script type="text/javascript" src="{{ asset('js/registreer.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/datepicker.js') }}"></script>
    <script>
      // Material Select Initialization
      $(document).ready(function() {
        $('.mdb-select').materialSelect();
      });
    </script>
{% endblock %}
</body>
{% endblock %}
