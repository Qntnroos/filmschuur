{% extends 'base.html.twig' %}
{% block title %} Programma {% endblock %}
{% block body %}
    <body class="darkbody">
    <div class="container">
        <div class="col-12 mt-4">
            <form action="" class="formOverview">
                <!-- Material inline 1 -->
                <div class="form-check form-check-inline">
                    <input type="radio" class="form-check-input" id="materialInline1" name="inlineMaterialRadiosExample" checked>
                    <label class="form-check-label" for="materialInline1">Alle films</label>
                </div>

                <!-- Material inline 2 -->
                <div class="form-check form-check-inline">
                    <input type="radio" class="form-check-input" id="materialInline2" name="inlineMaterialRadiosExample">
                    <label class="form-check-label" for="materialInline2">Vandaag</label>
                </div>
                <div class="form-check form-check-inline">
                    <label class="form-check-label">Kies Datum:</label>
                    <select class="mdb-select md-form dropdown-primary datechoose">
                        <option value="" disabled selected>Kies Datum</option>
                        <option value="1">Option 1</option>
                        <option value="2">Option 2</option>
                        <option value="3">Option 3</option>
                        <option value="4">Option 4</option>
                        <option value="5">Option 5</option>
                    </select>
                </div>
                <div class="form-check form-check-inline">
                    <label class="form-check-label">Kies Genre:</label>
                    <select class="mdb-select md-form dropdown-primary datechoose">
                        <option value="" disabled selected>Kies genre</option>
                        {% for genre in genres %}
                            <option value="{{ genre.genre_name }}">{{ genre.genre_name }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-check form-check-inline">
                    <label class="form-check-label">Leeftijd:</label>
                    <select class="mdb-select md-form dropdown-primary datechoose">
                        <option value="" disabled selected>Kies leeftijd:</option>
                        <option value="AL">Alle leeftijden</option>
                        <option value="6">Vanaf 6 jaar</option>
                        <option value="12">Vanaf 12 jaar</option>
                        <option value="16">Vanaf 16 jaar</option>
                    </select>
                </div>
            </form>
        </div>
        <div class="col-12 text-center mt-5 overview">
            <h1>Alle films</h1>
            <hr>
        </div>
        <div class="row">
            {% for movie in res %}
            <div class="col-12 col-sm-6 col-lg-3 mt-5">
                <!-- Card -->
                <a href="http://127.0.0.1:8000/film/{{ movie.movieID }}">
                <div class="card">

                    <!-- Card image -->
                    <img class="card-img-top" src="http://fullstacksyntra.be/{{ movie.poster }}" alt="poster {{ movie.movie_title }}">

                </div>
                </a>
                <!-- Card -->
            </div>
            {% endfor %}
            </div>
        </div>
    </div>
    {% block scripts %}
        <script>
          // Material Select Initialization
          $(document).ready(function() {
            $('.mdb-select').materialSelect();
          });
        </script>
    {% endblock %}
    </body>
{% endblock %}