{% extends 'base.html.twig' %}
{% block title %}{{ info[0].movie_title }} - De filmschuur {% endblock %}
{% block midcontent %}
    <div><h3>{{ info[0].movie_title }}</h3></div>
{% endblock  %}
{% block body %}
<body class="lightbody">
<div class="container-fluid">
    <div class="row darkbody">
        <div class="col-10 offset-1 video mb-5">
            <iframe src="{{ info[0].trailer_link }}" scrolling="no" allowfullscreen></iframe>
        </div>
    </div>
    <div class="row my-5">
        <div class="col-8 offset-2 movie-details">
            <div class="row">
                <div class="col-4 offset-1 mt-3">
                    <h1>{{ info[0].movie_title }}</h1>
                    <div class="icons mt-2">
                        <img src="{{ asset('img/kijkwijzer-16.svg') }}" alt="">
                        <img src="{{ asset('img/kijkwijzer-16.svg') }}" alt="">
                        <img src="{{ asset('img/kijkwijzer-16.svg') }}" alt="">
                        <img src="{{ asset('img/kijkwijzer-16.svg') }}" alt="">
                    </div>
                    <div class="info mt-4">
                        <p>Genre: {{ info[0].genreList }}</p>
                        <p>Duur: {{ info[0].movie_length }} minuten</p>
                        <p>Release: {{ info[0].release_year }}</p>
                        <p>Taal: {{ info[0].spokenlanguageList }}</p>
                        <p>Ondertitels: {{ info[0].undertitlelanguageList }}</p>
                    </div>
                </div>
                <div class="col-5 offset-1">
                    <div class="bestellen mt-3">
                        <form action="">
                            <div class="row">
                                <div class="col-8 date-picker">
                                    <label class="mr-2" for="">Kies Datum:</label><select class="mdb-select  btn-lg md-form colorful-select dropdown-primary">
                                        <option value="">12-03-2019 00:00</option>
                                        <option value="">13-03-2019 00:00</option>
                                        <option value="">14-03-2019 00:00</option>
                                        <option value="">15-03-2019 00:00</option>
                                        <option value="">16-03-2019 00:00</option>
                                        <option value="">17-03-2019 00:00</option>
                                        <option value="">18-03-2019 00:00</option>
                                    </select>
                                </div>
                        <div class="col-2 clearfix">
                        <button type="button" class="btn order-button btn-lg">Bestellen</button>
                        </div>
                        </form>
                    </div>
                    <div class="inhoud mt-5">
                        <h1>Korte inhoud:</h1>
                        <p class="sans-serif">
                            {{ info[0].synopsis }}
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-4 offset-1 directors mt-5">
                <h1>Regisseur(s):</h1>
                <div class="row">
                    <div class="col-8">
                        <p>{{ info[0].directorsList}}</p>
                    </div>
                </div>
            </div>
            <div class="col-5 offset-1 actors head-img mt-5 mb-2">
                <h1>Acteurs:</h1>
                <div class="row mt-2">
                    <div class="col-12">
                        <p>{{ info[0].actorsList }}</p>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
</body>
{% endblock %}
